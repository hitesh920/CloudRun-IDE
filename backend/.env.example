# CloudRun IDE — Backend Configuration

# AI Providers (at least one required for AI features)
# Groq is free and fast — get a key at https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Gemini is used as fallback — get a key at https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=True

# CORS
CORS_ORIGINS=*

# Docker Container Resource Limits
MAX_EXECUTION_TIME=60
MAX_MEMORY=1g
MAX_CPU_QUOTA=100000
MAX_CPU_PERIOD=100000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10

# Pre-pull Docker images on startup
PRE_PULL_IMAGES=True

# File Upload Limits
MAX_FILE_SIZE_MB=10
MAX_FILES_PER_UPLOAD=10

# Logging
LOG_LEVEL=INFO
