# ─── AI Assistant ─────────────────────────────
GROQ_API_KEY=your_groq_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# ─── Auth & Database ─────────────────────────────
JWT_SECRET=cloudrun-ide-secret-change-me-in-production
# DATABASE_URL=  (default: SQLite in data/cloudrun.db)
# DATABASE_URL=mongodb://localhost:27017/cloudrun
# DATABASE_URL=postgresql://user:pass@localhost:5432/cloudrun

# ─── Server ──────────────────────────────────────
HOST=0.0.0.0
PORT=8000
DEBUG=false
CORS_ORIGINS=*

# ─── Docker Limits ───────────────────────────────
MAX_EXECUTION_TIME=30
MAX_MEMORY=256m
MAX_CPU_QUOTA=50000
MAX_CPU_PERIOD=100000

# ─── Rate Limiting ───────────────────────────────
MAX_REQUESTS_PER_MINUTE=30

# ─── Other ───────────────────────────────────────
PRE_PULL_IMAGES=false
MAX_UPLOAD_SIZE=10485760
MAX_FILES_PER_REQUEST=5
LOG_LEVEL=INFO
